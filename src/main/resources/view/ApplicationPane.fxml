<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="view/map.css"
            fx:controller="pl.agh.edu.to.rzulfie.controller.ApplicationController"
            prefHeight="800.0" prefWidth="1200.0" minHeight="600.0" minWidth="1000.0">
    <top>
        <HBox styleClass="form">
            <Label text="Select number of players:" prefWidth="200"/>
            <ComboBox fx:id="numberOfPlayersComboBox" prefWidth="100"/>
            <Button text="Start" onAction="#startButtonClicked" />
            <Text fx:id="playerTurtle"/>
        </HBox>
    </top>
    <center>
        <VBox>
            <HBox>
                <Label text="Current player: " />
                <Text fx:id="currentPlayer" />
            </HBox>
            <GridPane fx:id="mapPane" styleClass="map"/>
        </VBox>
    </center>
    <right>
        <TableView fx:id="gameHistoryTable" prefHeight="200.0" prefWidth="200.0">
            <columns>
                <TableColumn fx:id="dateColumn" prefWidth="75.0" text="Date"/>
                <TableColumn fx:id="winnerColumn" prefWidth="75.0" text="Winner"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </right>
    <bottom>
        <HBox>
            <HBox>
                <Label text="Select turtle:"/>
                <ComboBox fx:id="turtleComboBox"/>
            </HBox>
            <Button fx:id="moveLeftButton" text="Move left" onAction="#moveLeftButtonClicked"/>
            <Button fx:id="moveRightButton" text="Move right" onAction="#moveRightButtonClicked"/>
            <Label text="Winner:" prefWidth="100"/>
            <Text fx:id="winner"/>
        </HBox>
    </bottom>

</BorderPane>
