<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="pl.agh.edu.to.rzulfie.controller.ScoreboardController"
            prefHeight="400.0" prefWidth="400.0">
    <center>
        <TableView fx:id="gameHistoryTable" prefHeight="200.0" prefWidth="200.0" styleClass="scores">
            <columns>
                <TableColumn fx:id="dateColumn" prefWidth="75.0" text="Date"/>
                <TableColumn fx:id="winnerColumn" prefWidth="75.0" text="Winner"/>
                <TableColumn fx:id="scoreColumn" prefWidth="75.0" text="Score"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>
</BorderPane>
