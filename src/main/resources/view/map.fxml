<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="view/map.css"
            fx:controller="pl.agh.edu.to.rzulfie.controller.MapController"
            prefHeight="800.0" prefWidth="1200.0" minHeight="600.0" minWidth="1000.0">
    <top>
        <HBox styleClass="form">
            <Label text="Enter number of players:" prefWidth="200"/>
            <TextField fx:id="numberOfPlayersField" promptText="Enter number of players..." prefWidth="300"/>
            <Button text="Start" onAction="#startButtonClicked" />
            <HBox>
                <Label text="Current player: " />
                <Text fx:id="currentPlayer" />
            </HBox>
        </HBox>
    </top>
    <center>
        <GridPane fx:id="mapPane" />
    </center>
    <bottom>
        <HBox>
            <HBox>
                <Label text="Select turtle:"/>
                <ComboBox fx:id="turtleComboBox"/>
            </HBox>
            <Button fx:id="moveLeftButton" text="Move left" onAction="#moveLeftButtonClicked"/>
            <Button fx:id="moveRightButton" text="Move right" onAction="#moveRightButtonClicked"/>
            <Label text="Winner:" prefWidth="100"/>
            <Text fx:id="winner"/>
        </HBox>
    </bottom>

</BorderPane>
